{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "react",
    "jsxFactory": "forgo.createElement",
    "jsxFragmentFactory": "forgo.Fragment",
    
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    "scripts",
    "eslint.config.js",
    "rollup.config.js"
  ]
}